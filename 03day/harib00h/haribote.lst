     1                                  ;haribote-os
     2                                  ;TAB=4
     3                                  
     4                                  ;BOOT_INFO関係
     5                                  
     6                                  CYLS		EQU		0x0ff0			;ブートセクタが設定する
     7                                  LEDS		EQU		0x0ff1
     8                                  VMODE		EQU		0x0ff2			;色数に関する情報。何ビットカラーか？
     9                                  SCRNX		EQU		0x0ff4			;解像度のX(screen X)
    10                                  SCRNY 		EQU 	0x0ff6			;解像度のY(screen Y)
    11                                  VRAM		EQU 	0x0ff8			;グラフィックバッファの開始番地
    12                                  
    13                                  			ORG		0xc200			;このプログラムがどこに読み込まれるのか
    14                                  
    15 00000000 B013                    			MOV		AL,0x13			;VGAグラフィックス、320x200x8bitカラー
    16 00000002 B400                    			MOV		AH,0x00
    17 00000004 CD10                    			INT		0x10
    18 00000006 C606F20F08              			MOV 	BYTE [VMODE],8	;画面モードをメモする
    19 0000000B C706F40F4001            			MOV		WORD [SCRNX],320
    20 00000011 C706F60FC800            			MOV		WORD [SCRNY],200
    21 00000017 66C706F80F00000A00      			MOV		DWORD [VRAM],0x000a0000
    22                                  
    23                                  ;キーボードのLED状態をBIOSに教えてもらう
    24                                  
    25 00000020 B402                    	MOV		AH,0x02
    26 00000022 CD16                    	INT		0x16					;Keyboard BIOS
    27 00000024 A2F10F                  	MOV		[LEDS],AL
    28                                  
    29                                  fin:
    30 00000027 F4                      			HLT
    31 00000028 EBFD                    			JMP fin
